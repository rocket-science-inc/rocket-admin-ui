{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es5", "es6", "dom"],
        "paths": {
            "@/*": ["src/*"],
            "@plugins/*": ["src/plugins/*"]
        },
        "typeRoots": ["node_modules/@types"]
    },
    "include": [
        "src/**/*"
    ]
}